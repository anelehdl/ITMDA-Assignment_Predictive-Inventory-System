<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/colorSurface">

    <!-- Product Name and Price -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/product_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/product_category_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R49.99"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ACTION BUTTONS ADDED HERE -->

    <!-- Add to Wishlist Button -->
    <ImageButton
        android:id="@+id/button_add_to_wishlist"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Add to Wishlist"
        android:src="@drawable/ic_favorite_border" /> <!-- Use ic_favorite for selected state -->

    <!-- Add to Cart Button -->
    <ImageButton
        android:id="@+id/button_add_to_cart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Add to Cart"
        android:src="@drawable/ic_add_shopping_cart" />

</LinearLayout>
