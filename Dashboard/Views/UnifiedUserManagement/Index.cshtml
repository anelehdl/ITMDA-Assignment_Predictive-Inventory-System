@{
    ViewData["Title"] = "User Management";
}

<style>
    .management-container {
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }

    .content-wrapper {
        background: #c3cab4;
        border-radius: 50px;
        padding: 3rem;
        margin: 2rem auto;
        max-width: 100%;
    }

    .panel {
        background: linear-gradient(120deg, var(--primary) 0%, var(--secondary) 40%);
        backdrop-filter: blur(20px);
        border: 1px solid var(--bg1);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        color: white;
    }

        .panel:hover {
            transform: translateY(-5px);
            transition: transform 0.3s ease;
        }

    .management-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .management-card {
        background: linear-gradient(135deg, #6B2C7F4d, #6B2C7F80);
        border: 2px solid var(--btn-p1);
        border-radius: 20px;
        padding: 2rem;
        transition: all 0.3s ease;
    }

        .management-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 24px var(--shadow1);
        }

        .management-card.client-card {
            background: linear-gradient(135deg, #6B2C7F4d, #6B2C7F80);
            border-color: var(--c-badge1);
        }

    .card-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .card-description {
        opacity: 0.9;
        margin-bottom: 1.5rem;
    }

    .btn-glass {
        background: var(--bg1);
        border: 1px solid var(--bg1);
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
        font-weight: 500;
        width: 100%;
        text-align: center;
    }

        .btn-glass:hover {
            background: var(--bg4);
            transform: translateY(-2px);
            color: white;
        }

    .alert-glass {
        background: var(--bg1);
        border: 1px solid var(--bg1);
        border-radius: 10px;
        padding: 1rem;
        margin-bottom: 1rem;
        
    }

    .alert-success {
        background: var(--alert-s1);
        border-color: var(--alert-s1);
    }

    .alert-danger {
        background: var(--alert-d1);
        border-color: var(--alert-d2);
    }

    .back-link {
        color: var(--back-link);
        text-decoration: none;
        margin-bottom: 1rem;
        display: inline-block;
    }

        .back-link:hover {
            color: #88925e;
        }
</style>

<div class="management-container">
    <a asp-controller="Home" asp-action="Index" class="back-link">← Back to Dashbboard</a>

    <h1 class="mb-4">User Management</h1>

    <div class="content-wrapper">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-glass">
                @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-glass">
                @TempData["Error"]
            </div>
        }

        <div class="panel">
            <h2>Manage Your System Users</h2>
            <p>Choose an option below to view and manage staff members or clients</p>
        </div>

        <div class="management-grid">
            <div class="management-card">
                <div class="card-title">Staff Management</div>
                <div class="card-description">
                    View and manage internal staff members, assign roles (admin/staff), and control system access
                </div>
                <a asp-action="ViewStaff" class="btn-glass">
                    View Staff Users
                </a>
            </div>

            <div class="management-card client-card">
                <div class="card-title">Client Management</div>
                <div class="card-description">
                    View and manage external clients and track client information
                </div>
                <a asp-action="ViewClients" class="btn-glass">
                    View Client Users
                </a>
            </div>

            <div class="management-card">
                <div class="card-title">All Users</div>
                <div class="card-description">
                    View combined list of all users in the system with filtering and search capabilities
                </div>
                <a asp-action="ViewAll" class="btn-glass">
                    View All Users
                </a>
            </div>
        </div>
    </div>
    
</div>