<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:background="@color/colorSurface"
    android:animateLayoutChanges="true"> <!-- This enables smooth expand/collapse animations -->

    <!-- Question Layout (with an arrow icon) -->
    <RelativeLayout
        android:id="@+id/question_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/faq_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/arrow_icon"
            android:text="This is a sample question?"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/arrow_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_down" />
    </RelativeLayout>

    <!-- Answer TextView (initially hidden) -->
    <TextView
        android:id="@+id/faq_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="This is the answer to the question. It can be a longer piece of text explaining the details."
        android:textSize="14sp"
        android:textColor="@color/colorOnSurface"
        android:visibility="gone" /> <!-- Initially hidden -->

</LinearLayout>
